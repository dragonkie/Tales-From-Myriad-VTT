<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="settings">Settings</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Description Tab --}}
    <div class="tab description" data-group="primary" data-tab="description">
      {{editor system.description target="system.description" rollData=rollData button=true owner=owner editable=editable}}
    </div>

    {{!-- Settings Tab --}}
    <div class="tab settings" data-group="primary" data-tab="settings">
      {{!-- As you add new fields, add them in here! --}}
      <div class="resource">
        <label class="resource-label">Casting Difficulty</label>
        <input type="text" name="system.difficulty.value" value="{{system.difficulty.value}}" data-dtype="Number"/>
      </div>

      <div class="resource">
        <label class="resource-label">Needed Successes</label>
        <input type="text" name="system.difficulty.count" value="{{system.difficulty.count}}" data-dtype="Number"/>
      </div>

      <div class="resource">
        <label class="resource-label">Range</label>
        <input type="number" name="system.range" value="{{system.range}}" data-dtype="Number"/>
      </div>

      <!-- Checkboxs -->
      <div class="resource">
        <label class="resource-label">Ritual</label>
        <input type="checkbox" name="system.ritual" value="{{system.ritual}}" data-dtype="Number"/>
      </div>

      <div class="resource">
        <label class="resource-label">Channeled</label>
        <input type="checkbox" name="system.channeled" value="{{system.channeled}}" data-dtype="Number"/>
      </div>

      

    </div>
  </section>
</form>

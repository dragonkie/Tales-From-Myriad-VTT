<ol class="item-list" style="padding: 0;">
    <li class="item flexrow items-header">
        <div class="item-name">{{title}}</div>
        <div class="item-controls">
            <a class="item-control item-create" title="Create item" data-type="item"><i class="fas fa-plus"></i> Add item</a>
        </div>
    </li>
    {{#each list as |item id|}}
    <li class="item flexrow" data-item-id="{{item._id}}">
        <div class="item-name">
            <div class="item-image" style="float: left">
                <a class="rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24" /></a>
            </div>
            <h4 style="float: left; padding-left: 5px;">{{item.name}}</h4>
        </div>
        <div class="item-formula item-prop">{{item.system.formula}}</div>
        <div class="item-controls" style="flex: 0 0 auto; whitespace: nowrap;">
            <a class="item-control item-delete" style="float: right;" title="Delete Item"><i class="fas fa-trash"></i></a>
            <a class="item-control item-edit" style="float: right;" title="Edit Item"><i class="fas fa-edit"></i></a>
            {{#if item.system.equipped}}
                <a class="item-control item-equip" style="float: right;" title="Equipped"><i class="fas fa-hand-paper"></i></a>
            {{/if}}
            {{#unless item.system.equipped}}
                <a class="item-control item-equip" style="float: right;" title="Unequipped"><i class="fas fa-shopping-bag"></i></a>
            {{/unless}}
        </div>
    </li>
    {{/each}}
</ol>
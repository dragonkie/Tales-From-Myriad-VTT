<div class="{{tabs.items.tabCssClass}}" data-group="primary" data-tab="items">

    <ol class="items-list">
        <li class="item flexrow items-header">
            <div class="item-name">Name</div>
            <div>Actions</div>
            <div class="item-controls">
                <a class="item-control item-create" title="Create item" data-type="item"><i class="fas fa-plus"></i> Add item</a>
            </div>
        </li>
        {{#each items as |item id|}}
            {{#unless (eq item.type 'spell')}}
                <li class="item flexrow" data-item-uuid="{{item.uuid}}">

                    <div class="item-name">
                        <div class="item-image" data-action="useItem">
                            <a class="rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="30" height="30" /></a>
                        </div>
                        <h4 style="padding-left: 4px;">{{item.name}}</h4>
                    </div>

                    <div class="item-actions item-prop flexrow">
                        {{#if (eq item.type 'weapon')}}
                            <a data-action="useItem" data-use="attack">
                                <div class="item-action fa-lg fa-solid fa-sword"></div>
                                Attack
                            </a>
                            <a data-action="useItem" data-use="damage">
                                <div class="item-action fa-lg fa-solid fa-droplet"></div>
                                Damage
                            </a>
                        {{/if}}
                    </div>
                    <div class="item-controls" style="whitespace: nowrap; flex: 0 1;">
                        {{#if item.system.equipped}}<a class="item-control item-equip" data-action="equipItem" title="Unequip Item"><i class="fa-solid fa-hand"></i></a>{{/if}}
                        {{#unless item.system.equipped}}<a class="item-control item-equip" data-action="equipItem" title="Equip Item"><i class="fa-solid fa-briefcase-blank"></i></a>{{/unless}}
                        <a class="item-control item-edit" data-action="editItem" title="Edit Item"><i class="fas fa-edit"></i></a>
                        <a class="item-control item-gift" data-action="giveItem" title="Give item"><i class="fa-solid fa-gift"></i></a>
                        {{#if ../isEditMode}}
                            <a class="item-control item-delete" data-action="deleteItem" title="Delete Item"><i class="fas fa-trash"></i></a>
                        {{/if}}

                    </div>
                </li>
            {{/unless}}
        {{/each}}
    </ol>
</div>
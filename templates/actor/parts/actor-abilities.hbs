<!-- List of actors ability scores and modifiers -->
<div class="flexrow ability-list" style="align-items: flex-start; flex-wrap: nowrap;">

    <!-- Damage resistance -->
    <div class="ability">
        <label class="label">{{system.attributes.dr.abbr}}</label>
        <div class="modifier">{{numberFormat system.attributes.dr.value decimals=0 sign=true}}</div>
    </div>
    <!-- Dodge class -->
    <div class="ability">
        <label class="label">{{system.attributes.dodge.abbr}}</label>
        <div class="modifier">{{numberFormat system.attributes.dodge.value decimals=0 sign=false}}</div>
    </div>


    {{#each system.abilities as |ability key|}}
    <div class="ability">
        <a class="label rollable" data-label="{{ability.label}}" data-roll="2d6x6kf(max(3, 3+@lck.mod))+{{ability.mod}}">{{ability.abbr}}</a>

        <div class="modifier">{{numberFormat ability.mod decimals=0 sign=true}}</div>
        <input class="score" type="number" name="system.abilities.{{key}}.value" value="{{ability.value}}">

    </div>
    {{/each}}
</div>
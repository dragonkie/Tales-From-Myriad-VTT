<div class="{{tabs.features.tabCssClass}}" data-group="primary" data-tab="features">
    {{!-- Top panel group --}}
    <section style="display: flex; flex: 1; flex-direction: column;">
        {{!-- Left side panel --}}
        <div style="display: flex; flex: 1; flex-direction: row;">
            <div style="flex: 1;">
                {{!-- Weapon Proficiencies --}}
                <ol>
                    <li class="item flexrow items-header">
                        <div>Weapon Proficiencies</div>
                    </li>
                    {{#each system.prof as | value key |}}
                        <div class="flexrow" data-prof="{{key}}">
                            <p style="flex: 2; margin: 4px 0">{{key}}:</p>
                            <div style="flex: 1;" data-action="changeProf">
                                {{#if (eq value 0)}}<i class="fa-regular fa-circle"></i><i class="fa-regular fa-circle"></i><i class="fa-regular fa-circle"></i>{{/if}}
                                {{#if (eq value 1)}}<i class="fa-solid fa-circle"></i><i class="fa-regular fa-circle"></i><i class="fa-regular fa-circle"></i>{{/if}}
                                {{#if (eq value 2)}}<i class="fa-solid fa-circle"></i><i class="fa-solid fa-circle"></i><i class="fa-regular fa-circle"></i>{{/if}}
                                {{#if (eq value 3)}}<i class="fa-solid fa-circle"></i><i class="fa-solid fa-circle"></i><i class="fa-solid fa-circle"></i>{{/if}}
                            </div>
                        </div>
                    {{/each}}
                </ol>
            </div>
            {{!-- Right side panel--}}
            <div style="flex: 1;">
                {{!-- Actor Features --}}
                <ol class="items-list">
                    <li class="item flexrow items-header">
                        <div class="item-name">Name</div>
                        <div class="item-formula">Roll Formula</div>
                        <div class="item-controls">

                        </div>
                    </li>
                    {{#each items as |item id|}}
                        {{#if (eq item.type 'feature')}}
                            <li class="item flexrow" data-item-uuid="{{item.uuid}}">
                                <div class="item-name">
                                    <div class="item-image" data-action="useItem">
                                        <a class="rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="30" height="30" /></a>
                                    </div>
                                    <h4 style="padding-left: 4px;">{{item.name}}</h4>
                                </div>
                                <div class="item-formula item-prop">{{item.system.formula}}</div>
                                <div class="item-controls" style="whitespace: nowrap; flex: 0 1;">
                                    {{#if item.system.equipped}}<a class="item-control item-equip" data-action="equipItem" title="Unequip Item"><i class="fa-solid fa-hand"></i></a>{{/if}}
                                    {{#unless item.system.equipped}}<a class="item-control item-equip" data-action="equipItem" title="Equip Item"><i class="fa-solid fa-briefcase-blank"></i></a>{{/unless}}
                                    {{#if ../isEditable}}
                                        <a class="item-control item-edit" data-action="editItem" title="Edit Item"><i class="fas fa-edit"></i></a>
                                        <a class="item-control item-delete" data-action="deleteItem" title="Delete Item"><i class="fas fa-trash"></i></a>
                                    {{/if}}
                                </div>
                            </li>
                        {{/if}}
                    {{/each}}
                </ol>
            </div>
    </section>

    {{!-- Bottom panel group--}}
    <section>
        {{!-- Personal Quests --}}
        <h4>Personal Quests</h4>
        <div class="flexcol">
            <input name="system.quests.one" style="margin-bottom: 2px;" type="text" value="{{system.quests.one}}"/>
            <input name="system.quests.two" style="margin-bottom: 2px;" type="text" value="{{system.quests.two}}"/>
            <input name="system.quests.three" style="margin-bottom: 2px;" type="text" value="{{system.quests.three}}"/>
        </div>
    </section>
</div>





</div>